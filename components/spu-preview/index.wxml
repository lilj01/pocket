<wxs src="../../wxs/price.wxs" module="p"></wxs>
<view class="container">
  <image class="img" src="{{data.img}}"/>
  <view class="content-container">
    <text class="title">{{data.title}}</text>
    <view class="tags">
      <block wx:for="{{tags}}">
        <l-tag l-class="l-tag" size="super-mini">{{item}}</l-tag>
      </block>
    </view>
    <view class="price-row">
      <l-price
      color="#157658"
      value-size="28"
      unit-size="20"
      autofix
      value="{{p.mainPrice(data.price,data.discount_price)}}"/>
      <l-price
      color="#999999"
      value-size="26"
      unit-size="20"
      autofix
      l-class="discount-price"
      wx:if="{{data.discount_price}}"
      deleted value="{{p.slashedPrice(data.price,data.discount_price)}}"/>
    </view>
    
    <text class="subtitle">{{data.subtitle}}</text>
  </view>
</view>