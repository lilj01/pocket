.container {
  box-sizing: border-box;
  padding: 30rpx;
  background-color: #ffffff;
  /*sku信息弹出时，规格少的情况可以提升视觉效果 居于屏幕中间显示*/
  max-height: 1000rpx;
  min-height: 700rpx
}

.inner-container{
  padding: 30rpx 30rpx 0rpx 30rpx;
}

.sku-preview {
  display: flex;
  flex-direction: row;
}

.sku-img {
  width: 160rpx;
  height: 160rpx;
}

.sku-description {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin-left: 40rpx;
}

.discount-price {
  margin-left: 20rpx;
}

.price-row {
  display: flex;
  flex-direction: row;
  align-items: baseline;
}

.sku-pending {
  font-size: 20rpx;
}

.hr {
  margin-top: 30rpx;
  width: 690rpx;
  height: 2rpx;
  background-color: #e9e9e9;
}

.stock {
  margin-left: 30rpx;
  font-size: 20rpx;
  color: #999;
}

.stock-pinch {
  margin-left: 30rpx;
  font-size: 20rpx;
  color: #d20109;
}

.sku-pending > text:first-child {
  color: #999;
}

.sku-pending > text:nth-child(2) {
  color: #666666;
}



.counter-container{
  margin-top: 34rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  padding-bottom: 200rpx;
}

.counter-container text {
  color: #555555;
  font-size: 24rpx;
}

.bottom-btn {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 100rpx;
  background-color: #333333;
  position: absolute;
  bottom: 0;
}

.bottom-btn text {
  color: #ffffff;
}

.out-stock {
  background-color: #DCEBE6;
}
